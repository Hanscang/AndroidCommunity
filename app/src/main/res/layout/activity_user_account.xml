<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserAccountActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/community_list_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.mycommunity.BackLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/user_account_avatar"
                layout="@layout/common_text_edit" />

            <include
                android:id="@+id/user_account_nickname"
                layout="@layout/common_text_edit" />

            <include
                android:id="@+id/user_account_motto"
                layout="@layout/common_text_edit" />

            <include
                android:id="@+id/user_account_gender"
                layout="@layout/common_text_edit" />

            <include
                android:id="@+id/user_account_password"
                layout="@layout/common_text_edit" />

            <include
                android:id="@+id/user_account_phone"
                layout="@layout/common_text_edit" />

            <include
                android:id="@+id/user_account_community_id"
                layout="@layout/common_text_edit" />

            <include
                android:id="@+id/user_account_username"
                layout="@layout/common_text_edit" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>